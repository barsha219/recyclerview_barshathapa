<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".country_details"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/Countryname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country Name:"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/Countryname"
        app:layout_constraintTop_toTopOf="@id/Countryname"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/relg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Religion:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/Area"
        app:layout_constraintTop_toTopOf="@id/Area"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/popln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Population:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/relg"
        app:layout_constraintTop_toTopOf="@id/relg"
        android:layout_marginTop="35dp"/>

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popln"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/details"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="nepal nepal nepal nepal nepal
nepal nepal nepal nepal nepal nepal nepalnepal nepal nepal"
        app:layout_constraintTop_toBottomOf="@id/popln"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="@id/popln"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/flag"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/details"
        app:layout_constraintTop_toTopOf="@id/details" />

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/ani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals found:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/details"
        android:layout_marginTop="130dp"
        app:layout_constraintLeft_toLeftOf="@id/details"/>

    <TextView
        android:id="@+id/bir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birds Found:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/details"
        android:layout_marginTop="250dp"
        app:layout_constraintLeft_toLeftOf="@id/details"/>

    <TextView
        android:id="@+id/cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="country name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Countryname"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/Countryname" />

    <TextView
        android:id="@+id/areaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="area"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Area"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/Area" />

    <TextView
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="religion"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/relg"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/relg" />

    <TextView
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Population"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/popln"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/popln" />

    <TextView
        android:id="@+id/anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="animals"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ani"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/ani" />

    <TextView
        android:id="@+id/bird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="birds"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/bir"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/bir" />

    <TextView
        android:id="@+id/returnhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Home"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/bir"
        app:layout_constraintTop_toBottomOf="@+id/bir"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>